{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "lib",
        "target": "ESNext",
        "module": "ES6",
        "moduleResolution": "node",
        "strict": true,
        "types": ["node"],
        "resolveJsonModule": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "types"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}